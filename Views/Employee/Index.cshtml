@model IQueryable<WebApplication7.Models.EmployeeVM>
@using Microsoft.Extensions.Localization
@using AspGraduateProjAdminPan.Resource.Employee
@*to access Key And Value in resource file ,make it globale tob accessable*@
@inject IStringLocalizer<ShRes> SharedLocalizer
@{
    ViewBag.Title = SharedLocalizer["Employee"];


}
 <head>

</head>
<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">@SharedLocalizer["Add"]</a>
<a asp-controller="Employee" asp-action="Index" asp-route-culture="en-US">@SharedLocalizer["English"]</a>
<a asp-controller="Employee" asp-action="Index" asp-route-culture="ar-EG">@SharedLocalizer["Arabic"]</a>

