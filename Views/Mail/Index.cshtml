@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<h2>Hi From Mail Page</h2>
@*asp-controller + asp-action are equal "Mail/SendMail"*@
<form action="Mail/SendMail" method="post" class="form-group">
    <label for="Tile">Tile</label>
    <br />
    <input name="Title" class="form-control" />
    <br />
    <label for="Message">Your Message</label>

    <textarea name="Message" rows="5" class="form-control">
        
    </textarea>
    <br />
    <input type="submit" value="Send" class="btn btn-success" />



</form>
@{

  var  x = "color:green";

}
@if(TempData["mes"]!=null){

    if(TempData["mes"].ToString().StartsWith("S"))
     x = "color:red";

}

<h1 style="@x">
    @TempData["mes"]
    <br />
    @TempData["details"]

</h1>