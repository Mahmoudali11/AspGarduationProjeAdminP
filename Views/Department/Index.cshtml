@model IQueryable<WebApplication7.Models.DepartmentVM>

@using Microsoft.Extensions.Localization
@using AspGraduateProjAdminPan.Resource.Department
@*to access Key And Value in resource file ,make it globale tob accessable*@
@inject IStringLocalizer<ShRes> SharedLocalizer
@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

@*<link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />*@


<h2>@SharedLocalizer["WTE"]</h2>


@*<center>
        <h4>@ViewData["x"]</h4>
        <h4>@ViewBag.y</h4>
        <h4>@TempData["z"]</h4>
    </center>*@
 
 

    
<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Add Department</a>
 
<a asp-controller="Department" asp-action="Index" asp-route-culture="en-US">@SharedLocalizer["English"]</a>
<a asp-controller="Department" asp-action="Index" asp-route-culture="ar-EG">@SharedLocalizer["Arabic"]</a>
 



<table class="table table-striped table-bordered text-center">
    <tr>
        @*<th class="text-center">Id</th>*@
        <th class="text-center">Department Name</th>
        <th class="text-center">Department Code</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
    </tr>

        @foreach (var item in Model)
        {
        <tr>
            @*<td>@item.Id</td>*@
            <td>@item.DepartmentName</td>
            <td>@item.DepartmentCode</td>
            <td><a asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
            <td><a asp-controller="Department" asp-action="Delete" asp-route-ID="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
        }

    </table>